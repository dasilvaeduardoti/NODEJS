<h2>Editando Usuário</h2>

<form action="/usuario/edit/save" method="post" class="d-flex flex-column">
    <input type="hidden" name="id_usuario" value="{{usuario.id_usuario}}" class="form-control" />  
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" name="nome" value="{{usuario.nome_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Endereço:</label>
        <div class="col-sm-10">
            <input type="text" name="endereco" value="{{usuario.endereco_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">E-mail:</label>
        <div class="col-sm-10">
            <input type="email" name="email" value="{{usuario.email_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Data Nascimento:</label>
        <div class="col-sm-10">
            <input type="date" name="dataNascimento" value="{{usuario.data_nascimento_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row align-self-end">
        <input type="submit" class="btn btn-outline-warning" value="Salvar Alteração">
    </div>
</form>